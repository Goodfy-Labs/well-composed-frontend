  "scripts": {
    "dev": "yarn run build && node server",
    "start": "yarn run build && cross-env NODE_ENV=production node server",
    "build": "yarn run clean && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --progress --hide-modules",
    "clean": "rimraf dist",
    "lint": "yarn run lint:scripts && yarn run lint:styles",
    "lint:scripts": "eslint build/* js/* server.js",
    "lint:styles": "stylelint '+(js|scss)/**/*.+(scss|vue)'"
  }
