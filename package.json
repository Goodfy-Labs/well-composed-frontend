{
  "name": "well-composed-frontend",
  "version": "0.0.1",
  "description": "This is an example app to show how to build a flexible and modular frontend. The main technologies used are Vue together with Vuex and Nuxt.js in combination with the node-sass-magic-importer.",
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/maoberlehner/well-composed-frontend",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development nuxt",
    "build": "NODE_ENV=production nuxt build",
    "start": "NODE_ENV=production nuxt start",
    "generate": "NODE_ENV=production nuxt generate",
    "api": "nodemon api/server.js",
    "lint:scripts": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:styles": "stylelint --syntax scss '+(assets|components|layouts|pages)/**/*.+(scss|vue)'",
    "lint:gherkin": "gherkin-lint test/features",
    "lint": "npm run lint:scripts && npm run lint:styles && npm run lint:gherkin",
    "test:coverage": "jest --coverage",
    "test:unit": "jest",
    "test:acceptance": "nightwatch -c test/conf/default.conf.js --suiteRetries 2 --headless --parallel",
    "test:acceptance-watch": "sh test/watch-mode.sh",
    "test:acceptance-browserstack": "sh test/browserstack-parallel.sh",
    "test:acceptance-create-report": "node test/create-report.js",
    "test": "npm run test:unit && npm run test:acceptance"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maoberlehner/well-composed-frontend"
  },
  "bugs": {
    "url": "https://github.com/maoberlehner/well-composed-frontend/issues"
  },
  "dependencies": {
    "@avalanche/component-button": "^4.0.0-alpha.6",
    "@avalanche/generic-box-sizing-reset": "^4.0.0-alpha.4",
    "@avalanche/object-grid": "^4.0.0-alpha.14",
    "@avalanche/object-vertical-spacing": "^4.0.0-alpha.4",
    "@avalanche/setting-breakpoints": "^4.0.0-alpha.4",
    "@avalanche/setting-colors": "^4.0.0-alpha.4",
    "@avalanche/setting-font-sizes": "^4.0.0-alpha.4",
    "@avalanche/setting-spacings": "^4.0.0-alpha.5",
    "@avalanche/utility-width": "^4.0.0-alpha.7",
    "apollo-cache-inmemory": "^1.1.9",
    "apollo-client": "^2.2.5",
    "apollo-link-http": "^1.5.1",
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql": "^0.13.1",
    "graphql-tag": "^2.8.0",
    "graphql-tools": "^2.21.0",
    "isomorphic-unfetch": "^2.0.0",
    "normalize-scss": "^7.0.1",
    "nuxt": "latest",
    "vue": "^2.5.13",
    "vuelidate": "^0.6.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@avalanche/eslint-config": "^1.0.2",
    "@avalanche/stylelint-config": "^0.1.2",
    "@nuxtjs/pwa": "^2.0.5",
    "@vue/test-utils": "^1.0.0-beta.12",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "browserstack-local": "^1.3.0",
    "chokidar-cli": "^1.2.0",
    "chromedriver": "^2.35.0",
    "cucumber": "^4.0.0",
    "cucumber-html-reporter": "^4.0.1",
    "cucumber-pretty": "1.4.0",
    "eslint": "^4.18.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-vue": "^4.3.0",
    "gherkin-lint": "^2.8.0",
    "jest": "^22.4.2",
    "nightwatch": "^0.9.19",
    "nightwatch-cucumber": "^9.1.1",
    "node-sass": "^4.7.2",
    "node-sass-magic-importer": "^5.1.0",
    "nodemon": "^1.15.1",
    "sass-loader": "^6.0.6",
    "stylelint": "^9.1.1",
    "stylelint-processor-html": "^1.0.0",
    "vue-jest": "^2.1.0",
    "vue-loader-options-plugin": "^0.1.1",
    "vue-server-renderer": "^2.5.13",
    "vue-template-compiler": "^2.5.13"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "mapCoverage": true
  }
}
