{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "@avalanche/eslint-config",
    "plugin:vue/recommended"
  ],
  "rules": {
    "import/prefer-default-export": 0,
    "vue/require-prop-types": 2,
    "vue/max-attributes-per-line": [2, {
      "singleline": 3,
      "multiline": {
        "max": 1,
        "allowFirstLine": false
      }
    }]
  }
}
